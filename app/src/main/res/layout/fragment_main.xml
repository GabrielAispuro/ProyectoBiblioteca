<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffffff"
    tools:context=".MainActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:id="@+id/root_scroll">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <VideoView
            android:id="@+id/video_view_inicio"
            android:layout_width="640px"
            android:layout_height="480px"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txtView_mision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Misión"
            android:layout_marginTop="4pt"/>

        <TextView
            android:id="@+id/txtView_mision_contenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="Misión"
            android:layout_marginTop="2pt"/>

        <TextView
            android:id="@+id/txtView_vision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:textStyle="bold"
            android:text="Visión"
            android:layout_marginTop="4pt"/>

        <TextView
            android:id="@+id/txtView_vision_contenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="Misión"
            android:layout_marginTop="2pt"/>

        <TextView
            android:id="@+id/txtView_objetivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:textStyle="bold"
            android:text="Objetivo"
            android:layout_marginTop="4pt"/>

        <TextView
            android:id="@+id/txtView_objetivo_contenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:layout_marginTop="2pt"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_google_map"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/google_maps_button"
                android:layout_marginTop="10pt"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/button_agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No encontraste algún libro? ¡Pídelo aquí!"
                android:layout_marginTop="10pt"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


    </LinearLayout>

    </ScrollView>

</LinearLayout>